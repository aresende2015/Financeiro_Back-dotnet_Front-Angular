@model SetorModel

@{
    ViewBag.Titulo = "Setores";
    ViewBag.Subtitulo = "Tela para exclusão do setor";
    ViewBag.Icon = "fas fa-landmark";
    ViewBag.ActionTitulo = "SetorLista";
}

<partial name="_TituloPartial" />

<form asp-action="SetorDelete">
    <input asp-for="Id" hidden />
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">Excluir Setor</h1>
        <hr />
        <div class="row">

            <div class="col-2">
                <label asp-for="Descricao" class="control-label pt-2" style="font-size=20px"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Descricao" disabled class="form-control" />
            </div>

            <div class="col-5 offset-2">
                <a asp-action="SetorLista" class="btn-primary btn form-control">Voltar</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Excluir" class="btn btn-success form-control" />
            </div>
        </div>
    </div>
</form>

